<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style TargetType="Page" x:Key="PageStyle">
    <Setter Property="Background" Value="{ThemeResource SystemControlAcrylicElementMediumHighBrush}" />
    <Setter Property="Margin" Value="30, 10, 10, 10" />
  </Style>

  <Style TargetType="Grid" x:Key="PageContent" >
    <Setter Property="Background" Value="{ThemeResource SystemColorBackgroundBrush}" />
  </Style>

</ResourceDictionary>
